@model IEnumerable<VeterinaryPrescriptionSystem.Web.Models.Patient>

@{
    ViewData["Title"] = "Hastalar";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-4 mb-0">
            <i class="bi bi-heart-pulse text-primary"></i> Hastalar
        </h1>
        <p class="text-muted">Tüm hasta kayıtlarını görüntüleyin ve yönetin</p>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Hasta Ekle
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>
                            <i class="bi bi-person"></i> @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            <i class="bi bi-calendar"></i> @Html.DisplayNameFor(model => model.Age)
                        </th>
                        <th>
                            <i class="bi bi-tag"></i> @Html.DisplayNameFor(model => model.Species)
                        </th>
                        <th>
                            <i class="bi bi-bookmark"></i> @Html.DisplayNameFor(model => model.Breed)
                        </th>
                        <th>
                            <i class="bi bi-person-circle"></i> @Html.DisplayNameFor(model => model.OwnerName)
                        </th>
                        <th>
                            <i class="bi bi-telephone"></i> @Html.DisplayNameFor(model => model.OwnerPhone)
                        </th>
                        <th>
                            <i class="bi bi-envelope"></i> @Html.DisplayNameFor(model => model.OwnerEmail)
                        </th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Age)</td>
                            <td>@Html.DisplayFor(modelItem => item.Species)</td>
                            <td>@Html.DisplayFor(modelItem => item.Breed)</td>
                            <td>@Html.DisplayFor(modelItem => item.OwnerName)</td>
                            <td>
                                <a href="tel:@item.OwnerPhone" class="text-decoration-none">
                                    @Html.DisplayFor(modelItem => item.OwnerPhone)
                                </a>
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.OwnerEmail))
                                {
                                    <a href="mailto:@item.OwnerEmail" class="text-decoration-none">
                                        @Html.DisplayFor(modelItem => item.OwnerEmail)
                                    </a>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Düzenle">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detaylar">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Tooltip'leri aktifleştir
            $('[title]').tooltip();
        });
    </script>
}
