@model VeterinaryPrescriptionSystem.Web.Models.Patient

@{
    ViewData["Title"] = "Hasta Ekle";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">
                            <i class="bi bi-plus-circle"></i> Yeni Hasta KaydÄ±
                        </h2>
                        <a asp-action="Index" class="btn btn-outline-light">
                            <i class="bi bi-arrow-left"></i> Hasta Listesi
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Hasta Bilgileri -->
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">
                                    <i class="bi bi-heart-pulse"></i> Hasta Bilgileri
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label asp-for="Name" class="form-label"></label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="bi bi-tag"></i>
                                            </span>
                                            <input asp-for="Name" class="form-control" />
                                        </div>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Age" class="form-label"></label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="bi bi-calendar"></i>
                                            </span>
                                            <input asp-for="Age" class="form-control" type="number" min="0" max="100" />
                                        </div>
                                        <span asp-validation-for="Age" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Species" class="form-label"></label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="bi bi-star"></i>
                                            </span>
                                            <input asp-for="Species" class="form-control" />
                                        </div>
                                        <span asp-validation-for="Species" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Breed" class="form-label"></label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="bi bi-bookmark"></i>
                                            </span>
                                            <input asp-for="Breed" class="form-control" />
                                        </div>
                                        <span asp-validation-for="Breed" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Hasta Sahibi Bilgileri -->
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">
                                    <i class="bi bi-person"></i> Hasta Sahibi Bilgileri
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <label asp-for="OwnerName" class="form-label"></label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="bi bi-person-fill"></i>
                                            </span>
                                            <input asp-for="OwnerName" class="form-control" />
                                        </div>
                                        <span asp-validation-for="OwnerName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="OwnerPhone" class="form-label"></label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="bi bi-telephone"></i>
                                            </span>
                                            <input asp-for="OwnerPhone" class="form-control" />
                                        </div>
                                        <span asp-validation-for="OwnerPhone" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="OwnerEmail" class="form-label"></label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="bi bi-envelope"></i>
                                            </span>
                                            <input asp-for="OwnerEmail" class="form-control" type="email" />
                                        </div>
                                        <span asp-validation-for="OwnerEmail" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Hasta Ekle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
